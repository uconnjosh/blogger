<%= form_for @post do |f| %>

	<div class="form-group">
	  <%= f.label :name %>
	  <%= f.text_field :name %>
	</div>
	<div class="form-group">
	  <%= f.label :description %>
	  <%= f.text_area :description %>
	</div>
	<%= f.hidden_field :user_id, :value => current_user.id %>

	<%= f.submit"Create Post!", :class => 'btn btn-success' %>
	<%= link_to"Cancel", root_url, :class => 'btn btn-danger form' %>

<% end %>